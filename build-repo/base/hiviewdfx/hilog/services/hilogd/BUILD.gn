import("//build/ohos.gni")

config("hilogd_config") {
  visibility = [ ":*" ]

  include_dirs = [ "include" ]
}

ohos_executable("hilogd") {
  sources = [
    "cmd_executor.cpp",
    "flow_control.cpp",
    "kmsg_parser.cpp",
    "log_buffer.cpp",
    "log_collector.cpp",
    "log_compress.cpp",
    "log_domains.cpp",
    "log_kmsg.cpp",
    "log_persister.cpp",
    "log_persister_rotator.cpp",
    "log_stats.cpp",
    "main.cpp",
    "service_controller.cpp",
  ]
  configs = [
    ":hilogd_config",
    "//base/hiviewdfx/hilog/frameworks/libhilog:libhilog_config",
  ]
  defines = [ "__RECV_MSG_WITH_UCRED_" ]
  deps = [
    "//third_party/bounds_checking_function:libsec_shared",
    "//third_party/zlib:shared_libz",
  ]
  deps += [ "etc:hilogd_etc" ]

  external_deps = [
    "hilog_native:libhilog",
    "init:libbegetutil",
  ]
  install_images = [
    "system",
    "updater",
  ]
  install_enable = true
  part_name = "hilog_service"
  subsystem_name = "hiviewdfx"
}
