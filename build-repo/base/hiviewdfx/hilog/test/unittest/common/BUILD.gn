  sources = [ "hilog_print_test.cpp" ]

  configs = [
    ":module_private_config",
    "//base/hiviewdfx/hilog/frameworks/libhilog:libhilog_config",
  ]

  deps = [ "//third_party/googletest:gtest_main" ]

  external_deps = [
    "c_utils:utils",
    "hilog_native:libhilog",
