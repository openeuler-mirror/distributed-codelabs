import("//base/security/huks/huks.gni")
import("//build/config/features.gni")
import("//build/test.gni")

module_output_path = "security/huks"

##############################fuzztest##########################################
ohos_fuzztest("HksKeyExistFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file = "//base/security/huks/test/fuzz_test/hkskeyexist_fuzzer"

  include_dirs = [
    ".",
    "//commonlibrary/c_utils/base/include",
    "//third_party/bounds_checking_function/include",
    "//unittest/include",
    "//base/security/huks/frameworks/huks_standard/main/common/include/",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "hkskeyexist_fuzzer.cpp" ]

  deps = [
    "//base/security/huks/frameworks/huks_standard/main:huks_standard_frameworks",
    "//base/security/huks/interfaces/innerkits/huks_standard/main:libhukssdk",
    "//third_party/bounds_checking_function:libsec_static",
  ]
  external_deps = [ "c_utils:utils" ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":HksKeyExistFuzzTest",
  ]
}
