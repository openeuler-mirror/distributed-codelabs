import("//base/notification/common_event_service/event.gni")
import("//build/test.gni")

module_output_path = "common_event_service/common"

ohos_unittest("EventLogTest") {
  module_out_path = module_output_path

  sources = [ "${ces_common_path}/log/src/event_log_wrapper.cpp" ]

  sources += [ "event_log_test.cpp" ]

  configs = [ "${ces_common_path}:event_common_config" ]

  deps = [ "//third_party/googletest:gtest_main" ]

  external_deps = [ "hiviewdfx_hilog_native:libhilog" ]
}

group("unittest") {
  testonly = true

  deps = [ ":EventLogTest" ]
}
