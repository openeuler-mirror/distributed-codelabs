##############################fuzztest##########################################
ohos_fuzztest("DiscoveryServiceFuzzTest") {
  module_out_path = "dsoftbus/discovery"
  fuzz_config_file =
      "$dsoftbus_root_path/tests/sdk/discovery/fuzztest/discoveryservice_fuzzer"
  include_dirs = [
    "//foundation/communication/dsoftbus/adapter/common/include",
    "//foundation/communication/dsoftbus/core/common/inner_communication",
    "//foundation/communication/dsoftbus/core/common/include",
