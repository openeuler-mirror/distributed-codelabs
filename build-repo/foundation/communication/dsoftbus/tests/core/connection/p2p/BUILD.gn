  if (dsoftbus_feature_conn_br == true) {
    defines = [ "connection_enable_br_test" ]
  } else {
    defines = []
  }

  if (dsoftbus_feature_conn_ble == true) {
    defines += [ "connection_enable_ble_test" ]
