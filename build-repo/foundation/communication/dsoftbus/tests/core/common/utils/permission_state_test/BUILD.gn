import("//build/test.gni")
import("//foundation/communication/dsoftbus/dsoftbus.gni")

module_output_path = "dsoftbus/common"

ohos_unittest("PermissionsStateTest") {
  module_out_path = module_output_path
  sources = [ "permission_state_test.cpp" ]

  include_dirs = [
    "$dsoftbus_root_path/core/transmission/ipc/include",
    "$dsoftbus_root_path/core/frame/standard/client_manager/include",
    "$dsoftbus_root_path/interfaces/kits/common",
    "$softbus_adapter_common/include",
    "$dsoftbus_root_path/core/common/include",
  ]

  deps = [
    "$dsoftbus_root_path/adapter:softbus_adapter",
    "$dsoftbus_root_path/core/common:softbus_utils",
    "$dsoftbus_root_path/core/frame:softbus_server",
    "//third_party/googletest:gtest_main",
  ]

  if (is_standard_system) {
    external_deps = [
      "access_token:libaccesstoken_sdk",
      "access_token:libprivacy_sdk",
      "c_utils:utils",
      "device_auth:deviceauth_sdk",
      "hiviewdfx_hilog_native:libhilog",
      "ipc:ipc_core",
    ]
  } else {
    external_deps = [
      "c_utils:utils",
      "hilog:libhilog",
    ]
  }
}

group("unittest") {
  testonly = true
  deps = [ ":PermissionsStateTest" ]
}
