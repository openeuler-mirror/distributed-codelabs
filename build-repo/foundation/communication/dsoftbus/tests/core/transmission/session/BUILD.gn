import("//build/test.gni")
import("//foundation/communication/dsoftbus/dsoftbus.gni")

module_output_path = "dsoftbus/transmission"

ohos_unittest("TransSessionManagerTest") {
  module_out_path = module_output_path
  sources = [ "trans_session_manager_test.cpp" ]

  include_dirs = [
    "$dsoftbus_root_path/core/common/include",
    "$dsoftbus_root_path/core/frame/common/include",
    "$dsoftbus_root_path/core/transmission/common/include",
    "$dsoftbus_root_path/core/transmission/session/include",
  ]

  deps = [
    "$dsoftbus_root_path/core/common:softbus_utils",
    "$dsoftbus_root_path/core/frame:softbus_server",
    "//third_party/googletest:gtest_main",
  ]

  if (is_standard_system) {
    external_deps = [
      "c_utils:utils",
      "hiviewdfx_hilog_native:libhilog",
    ]
  } else {
    external_deps = [
      "c_utils:utils",
      "hilog:libhilog",
    ]
  }
}

ohos_unittest("TransSessionServiceTest") {
  module_out_path = module_output_path
  sources = [ "trans_session_service_test.cpp" ]

  include_dirs = [
    "$dsoftbus_root_path/core/common/include",
    "$dsoftbus_root_path/core/frame/common/include",
    "$dsoftbus_root_path/core/transmission/common/include",
    "$dsoftbus_root_path/core/transmission/session/include",
  ]

  deps = [
    "$dsoftbus_root_path/core/common:softbus_utils",
    "$dsoftbus_root_path/core/frame:softbus_server",
    "//third_party/googletest:gtest_main",
  ]

  if (is_standard_system) {
    external_deps = [
      "c_utils:utils",
      "hiviewdfx_hilog_native:libhilog",
    ]
  } else {
    external_deps = [
      "c_utils:utils",
      "hilog:libhilog",
    ]
  }
}

group("unittest") {
  testonly = true
  deps = [
    ":TransSessionManagerTest",
    ":TransSessionServiceTest",
  ]
}
